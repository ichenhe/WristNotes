<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_height="match_parent"
	android:layout_width="match_parent">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center"
		android:orientation="vertical">

		<TextView
			style="@style/titleText"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="5dp"
			android:text="@string/donation_donatingAuthor"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:padding="10dp"
			android:text="维护项目不易，望慷慨解囊"
			android:textSize="16sp"
			tools:ignore="HardcodedText"/>

		<ImageView
			android:layout_width="135dp"
			android:layout_height="172.5dp"
			android:src="@drawable/donation"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingTop="10dp"
			android:text="捐助者名单"
			android:textSize="16sp"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:padding="10dp"
			android:text="（按捐助时间排序，每次更新应用时这个名单会更新）"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingBottom="30dp"
			android:text="呆木\n有趣\n*映丹\n*磊\n*庭瑞\n*子峻\n*林霞\n*建坤\n*新宇\n*新荣\n*峻晨\n*厚余\n*梓澍\n*杰基\n*洁\n*诚业\n*宇\n*家铭\n回忆之前\n*阳鎏\n*志强\n*逸伦\n*晨杭\n*辉\n*子琦\n*子尧\n*建明\n*海波\n*霄然\n*炜成\n*俊斌\n*有涛\n*徐兵\n*帅\n*泽聪\n*鑫\n*宇栋\n*佳霖\n*黄杰\n（很抱歉支付宝不能私聊表示感谢）"
			android:paddingRight="20dp"
			android:paddingLeft="20dp"
			android:gravity="center"/>

	</LinearLayout>

</ScrollView>

