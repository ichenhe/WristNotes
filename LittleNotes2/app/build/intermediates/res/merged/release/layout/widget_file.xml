<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="40dp"
	android:orientation="horizontal"
	android:enabled="false"
	android:id="@+id/filedo"
	android:background="#303030"
	android:onClick="none"
	android:paddingLeft="23dp"
	android:paddingRight="23dp">

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:orientation="horizontal"
		android:layout_weight="1.0"
		android:gravity="center"
		android:enabled="true"
		android:id="@+id/filedo1"
		android:background="?android:attr/selectableItemBackground"
		android:paddingLeft="5dp"
		android:paddingRight="5dp">

		<ImageView
			android:layout_height="40dp"
			android:layout_width="40dp"
			android:src="@drawable/file_stage_new"
			android:id="@+id/filedoimg1"/>

		<TextView
			android:layout_height="match_parent"
			android:layout_width="wrap_content"
			android:gravity="center"
			android:id="@+id/filedotext1"
			android:visibility="gone"
			android:text="粘贴"
			android:paddingRight="10dp"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:orientation="horizontal"
		android:layout_weight="1.0"
		android:gravity="center"
		android:enabled="true"
		android:id="@+id/filedo2"
		android:background="?android:attr/selectableItemBackground"
		android:paddingLeft="5dp"
		android:paddingRight="5dp">

		<ImageView
			android:layout_height="40dp"
			android:layout_width="40dp"
			android:src="@drawable/file_stage_sort"
			android:id="@+id/filedoimg2"/>

		<TextView
			android:layout_height="match_parent"
			android:layout_width="wrap_content"
			android:gravity="center"
			android:id="@+id/filedotext2"
			android:visibility="gone"
			android:text="取消"
			android:paddingRight="10dp"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:orientation="horizontal"
		android:layout_weight="1.0"
		android:gravity="center"
		android:enabled="true"
		android:id="@+id/filedo3"
		android:background="?android:attr/selectableItemBackground"
		android:paddingLeft="5dp"
		android:paddingRight="5dp">

		<ImageView
			android:layout_height="40dp"
			android:layout_width="40dp"
			android:src="@drawable/file_stage_more"
			android:id="@+id/filedoimg3"/>

	</LinearLayout>

</LinearLayout>

