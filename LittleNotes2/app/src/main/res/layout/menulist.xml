<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:paddingLeft="30dp"
	android:paddingRight="30dp"
	android:descendantFocusability="blocksDescendants">

	<ImageView
		android:id="@+id/menulistimg"
		android:layout_width="54dp"
		android:layout_height="54dp"
		android:src="@drawable/about"
		android:padding="1dp"
		android:layout_centerVertical="true"/>

	<RelativeLayout
		android:id="@+id/menulistRelativeLayout"
		android:layout_width="wrap_content"
		android:layout_height="54dp"
		android:layout_alignParentRight="true"
		android:gravity="center">

		<ImageView
			android:id="@+id/menulistgo"
			android:layout_width="42dp"
			android:layout_height="42dp"
			android:src="@drawable/go"
			android:layout_centerInParent="true"/>

		<ToggleButton
			android:id="@+id/menulistswi"
			android:layout_width="46dp"
			android:layout_height="44dp"
			android:textOn="开"
			android:textOff="关"
			android:clickable="false"
			android:layout_centerInParent="true"/>

	</RelativeLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_toLeftOf="@id/menulistRelativeLayout"
		android:layout_toRightOf="@id/menulistimg"
		android:orientation="vertical"
		android:padding="2dp"
		android:minHeight="54dp">

		<TextView
			android:id="@+id/menulistText"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1.0"
			android:gravity="left|center"
			android:textSize="16sp"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="left|center"
			android:textColor="#989898"
			android:textSize="13sp"
			android:id="@+id/menulisttip"/>

	</LinearLayout>

</RelativeLayout>

