<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:paddingLeft="29dp"
	android:paddingRight="25dp"
	android:descendantFocusability="blocksDescendants">

	<RelativeLayout
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:id="@+id/menulistRelativeLayout1"
		android:layout_centerVertical="true">

		<ImageView
			android:id="@+id/menulistimg"
			android:layout_width="52dp"
			android:layout_height="52dp"/>

		<TextView
			android:id="@+id/menulisttext"
			android:layout_width="52dp"
			android:layout_height="52dp"
			android:gravity="center"
			android:text="A"
			android:textSize="26sp"
			android:textStyle="bold"
			android:visibility="gone"
			android:background="@drawable/shape_black"/>

	</RelativeLayout>

	<RelativeLayout
		android:id="@+id/menulistRelativeLayout"
		android:layout_width="wrap_content"
		android:layout_height="54dp"
		android:layout_alignParentRight="true"
		android:gravity="center">

		<ImageView
			android:id="@+id/menulistgo"
			android:layout_width="42dp"
			android:layout_height="42dp"
			android:src="@drawable/go"
			android:layout_centerInParent="true"/>

		<ToggleButton
			android:id="@+id/menulistswi"
			android:layout_width="46dp"
			android:layout_height="44dp"
			android:textOn="开"
			android:textOff="关"
			android:clickable="false"
			android:layout_centerInParent="true"/>

	</RelativeLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_toLeftOf="@id/menulistRelativeLayout"
		android:layout_toRightOf="@id/menulistRelativeLayout1"
		android:orientation="vertical"
		android:adjustViewBounds="true"
		android:minHeight="54dp"
		android:paddingBottom="4dp"
		android:paddingTop="4dp"
		android:paddingLeft="2dp">

		<TextView
			android:id="@+id/menulistText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1.0"
			android:gravity="left|center"
			android:textSize="16sp"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="left|center"
			android:textColor="#777777"
			android:textSize="12sp"
			android:id="@+id/menulisttip"
			android:paddingBottom="2dp"/>

	</LinearLayout>

</RelativeLayout>

